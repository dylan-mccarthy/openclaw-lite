# OpenClaw Lite Environment Configuration
# Copy this file to .env and modify as needed

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=2048

# Context Management
CONTEXT_MAX_TOKENS=4000
CONTEXT_COMPRESSION_STRATEGY=hybrid
CONTEXT_KEEP_FIRST_LAST=true

# Memory System
MEMORY_ENABLED=false
MEMORY_STORAGE_PATH=.openclaw-lite/memory
MEMORY_MAX_SESSIONS=100
MEMORY_PRUNE_DAYS=30

# Model Selection
MODEL_DEFAULT_PRIORITY=local
MODEL_FALLBACK_MODEL=llama3.1:8b

# Web Server
WEB_PORT=3000
WEB_ENABLE_CORS=true
WEB_MAX_CONTEXT_TOKENS=8192

# Workspace
OPENCLAW_WORKSPACE=.